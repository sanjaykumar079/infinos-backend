files:
  "/etc/nginx/conf.d/options.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      server {
        listen 8080;

        location / {
          if ($request_method = OPTIONS ) {
            add_header 'Access-Control-Allow-Origin' 'https://main.d385jmcqgfjtrz.amplifyapp.com' always;
            add_header 'Access-Control-Allow-Methods' 'GET, POST, PUT, PATCH, DELETE, OPTIONS' always;
            add_header 'Access-Control-Allow-Headers' 'Content-Type, Authorization, X-Admin-Passkey' always;
            add_header 'Access-Control-Allow-Credentials' 'true' always;
            return 200;
          }

          proxy_pass http://127.0.0.1:8081;
          proxy_set_header Host $host;
          proxy_set_header X-Real-IP $remote_addr;
          proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        }
      }
